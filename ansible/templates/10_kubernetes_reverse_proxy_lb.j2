upstream k8s {    
  hash $remote_addr;

  {% for host in groups['k3s'] %}
  server {{ hostvars[host].ansible_host }};
  {% endfor %}
}
server {    
  listen 80;    
  server_name *.k3s.{{ domain_name}};
  location / {       
    proxy_pass http://k8s;   
    proxy_buffering off; proxy_ignore_headers "X-Accel-Buffering";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }
}

server {    
  listen 443 ssl;    
  listen 5000 ssl;    
  server_name *.k3s.{{ domain_name}};

  ssl_certificate /etc/letsencrypt/live/k3s.{{ domain_name }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/k3s.{{ domain_name }}/privkey.pem;

  location / {       
    proxy_pass http://k8s;   
    proxy_buffering off; proxy_ignore_headers "X-Accel-Buffering";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    proxy_read_timeout 900;
    proxy_send_timeout 900;
  }
}
